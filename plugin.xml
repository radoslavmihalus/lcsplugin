<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.blueticket.LCSPlugin"
        version="0.7.0">

  <name>LCSPlugin</name>

  <engines>
    <engine name="cordova" version=">=3.0.0"/>
  </engines>

  <asset src="www/lcsplugin.js" target="js/lcsplugin.js"/>

  <js-module src="www/lcsplugin.js" name="LCSPlugin">
    <clobbers target="LCSPlugin" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="LCSPlugin">
        <param name="android-package" value="com.blueticket.plugin.LCSPlugin"/>
      </feature>
    </config-file>

    <source-file src="src/android/LCSPlugin.java" target-dir="src/com/blueticket/plugin/"/>
  </platform>

</plugin>